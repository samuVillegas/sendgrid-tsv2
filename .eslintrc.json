{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "es2021": true,
    "node": true
  },
  "rules": {
    "no-console": ["error", { "allow": ["error"] }],
    "no-trailing-spaces": "warn",
    "semi": "error",
    "comma-dangle": "error",
    "strict": "error",
    "require-await": "error"
  },
  "reportUnusedDisableDirectives": true,
  "overrides": [
    {
      "files": ["**/*.spec.ts"],
      "env": {
        "jest": true,
        "node": true
      }
    }
  ]
}
    